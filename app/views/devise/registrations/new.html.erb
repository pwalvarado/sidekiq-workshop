<div class="login-box">
  <div class="login-logo">
    <h1><%= link_to 'Killer app', :root -%></h1>
  </div>
  <!-- /.login-logo -->
  <div class="login-box-body">
    <p class="login-box-msg">Register a new membership</p>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="form-group has-feedback">
        <%= f.input :first_name, required: true, autofocus: true, label: false,
          placeholder: "First name", input_html: {class:'form-control'} %>
        <span class="glyphicon glyphicon-user form-control-feedback"></span>
      </div>

      <div class="form-group has-feedback">
        <%= f.input :last_name, required: true, autofocus: false, label: false,
          placeholder: "Last name", input_html: {class:'form-control'} %>
        <span class="glyphicon glyphicon-user form-control-feedback"></span>
      </div>

      <div class="form-group has-feedback">
        <%= f.input :email, required: true, autofocus: false, label: false,
          placeholder: "Email", input_html: {class:'form-control'} %>
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
      </div>

      <div class="form-group has-feedback">
        <%= f.input :password, required: true, label: false,
          placeholder: "Password", input_html: {class:'form-control'},
          hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length)  %>
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      </div>

      <div class="form-group has-feedback">
        <%= f.input :password_confirmation, required: true, label: false,
          placeholder: "Retype password", input_html: {class:'form-control'},
          type: "password"  %>
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      </div>

      <div class="row">
        <div class="col-xs-8">
          <div class="checkbox icheck">
            <label>
              <input type="checkbox"> I agree to the <a href="#">terms</a>
            </label>
          </div>
        </div>
        <!-- /.col -->
        <div class="col-xs-4">
          <%= f.button :submit, "Sign up", class: "btn btn-primary btn-block btn-flat" %>
        </div>
        <!-- /.col -->
      </div>
    <% end %>

    <div class="social-auth-links text-center">
      <p>- OR -</p>
      <a href="#" class="btn btn-block btn-social btn-facebook btn-flat"><i class="fa fa-facebook"></i> Sign up using
        Facebook</a>
      <a href="#" class="btn btn-block btn-social btn-google btn-flat"><i class="fa fa-google-plus"></i> Sign up using
        Google+</a>
    </div>

    <a href="login.html" class="text-center">I already have a membership</a>
  </div>
  <!-- /.login-box-body -->
</div>
<!-- /.form-box -->
